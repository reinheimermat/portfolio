---
interface Props {
  name: string
  role: string
  description: string
  src: string
  alt: string
}

const { name, role, description, src, alt } = Astro.props
---

<div
  class="flex flex-col-reverse justify-between gap-4 md:flex-row md:items-center md:gap-0"
>
  <div class="flex gap-4">
    <img src={src} alt={alt} class="size-12 rounded-full" />

    <div>
      <h2 class="font-semibold">{name}</h2>
      <p class="text-muted-foreground text-sm">{role}</p>
    </div>
  </div>

  <p class="text-muted-foreground font-serif text-sm font-medium">
    {description}
  </p>
</div>
